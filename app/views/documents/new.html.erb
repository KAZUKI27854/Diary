<div class="new-doc">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-2 col-sm-0"></div>
      <div class="col-lg-6 col-md-8 col-sm-12 new-doc-form">

        <% if @document.errors.any? %>
  　　　　　　<div class="error_explanation">
    　　　　　　<h3><%= pluralize(@document.errors.count, "つの") %>エラーがあります</h3>
    　　　　　　<ul class="error_message">
      　　　　　　<% @document.errors.full_messages.each do |message| %>
      　　　　　　　　<li><%= message %></li>
      　　　　　　<% end %>
    　　　　　　</ul>
  　　　　　　</div>
　　　　<% end %>

        <h2 class="master-message">ぼうけんをきろくできるぞ</h2>
        <% if current_user.goals.present? %>
          <%= form_with model: @document, local:true do |f| %>
            <div class="form-group">
              <label for="inputSkill">レベルアップしたこと</label></br>
              <%= f.collection_select :goal_id, current_user.goals, :id, :category %>
            </div>
            <div class="form-group mt-2">
              <label for="inputImage">がぞう</label>
              <%= f.attachment_field :document_image, class: "form-control-file" %>
            </div>
            <div class="form-group">
              <label for="inputBody">ぼうけんのないよう</label>
              <%= f.text_area :body, size: "20x7", class: "form-control", placeholder: "どんなことをしたか" %>
            </div>
            <div class="form-group">
              <label for="inputMilestone">つぎのもくひょう</label>
              <%= f.text_field :milestone, class: "form-control", placeholder: "つぎのもくひょう" %>
            </div>
            <div class="form-group">
              <label for="inputAddLevel">かくとくレベル</label>
              <%= f.select :add_level, options_for_select((1..50).to_a), class: "form-control" %>
            </div>
            <%= f.submit 'きろくする', class: "btn btn-primary btn-sm" %>
          <% end %>
        <% else %>
            <p>まずは<%= link_to "もくひょうをせってい", new_goal_path %>しましょう！</p>
        <% end %>
      </div>
      <div class="col-lg-3 col-md-2 col-sm-0"></div>
    </div>
  </div>
</div>
