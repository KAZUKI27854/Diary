<div class="new-doc">
  <%= form_with model: @document, local:true do |f| %>
  <div class="form-group">
    <label for="inputSkill">レベルアップしたスキル</label>
    <label><%= f.radio_button :title, "#{@skill1}" %><%= @skill1 %></label>
    <% if @user.skill2.present? %>
      <label><%= f.radio_button :title, "#{@skill2}" %><%= @skill2 %></label>
    <% end %>
    <% if @user.skill3.present? %>
      <label><%= f.radio_button :title, "#{@skill3}" %><%= @skill3 %></label>
    <% end %>
  </div>
  <div class="form-group mt-2">
    <label for="inputImage">がぞう</label>
    <%= f.attachment_field :diary_image, class: "form-control-file" %>
  </div>
  <div class="form-group">
    <label for="inputBody">ぼうけんのないよう</label>
    <%= f.text_area :body, size: "20x7", class: "form-control", placeholder: "ぼうけんのないよう" %>
  </div>
  <%= f.submit 'きろくする', class: "btn btn-primary btn-sm" %>
 <% end %>
</div>