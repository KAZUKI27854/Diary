<h1>document#show</h1>

<div class="col-lg-6 col-md-6 col-sm-12">
  <div class="card doc-card">
      <%= attachment_image_tag @document, :diary_image, size: "300x300", class: "card-img-top "; %>
    <div class="card-body">
      <div class="row">
          <p class="doc-title"><%= @document.title %></p>
          <p class="doc-body"><%= @document.body %></p>
          <p class="doc-date"><%= @document.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    </div>
  </div>
</div>