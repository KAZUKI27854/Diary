<div class="todo-lists">
  <div class="todo-lists__notice">
    <% if near_deadline_list_count >= 1 %>
      <div class="todo-lists__notice--near-deadline">
        <p class="todo-lists__notice--text">きげんが近いものが&nbsp;<%= near_deadline_list_count %>&nbsp;つあります</p>
      </div>
    <% end %>
    <% if today_deadline_list_count >= 1 %>
      <div class="todo-lists__notice--today-deadline">
        <p class="todo-lists__notice--text">きげんが本日のものが&nbsp;<%= today_deadline_list_count %>&nbsp;つあります</p>
      </div>
    <% end %>
    <% if over_deadline_list_count >= 1 %>
      <div class="todo-lists__notice--over-deadline">
        <p class="todo-lists__notice--text">きげん切れのものが&nbsp;<%= over_deadline_list_count %>&nbsp;つあります</p>
      </div>
    <% end %>
    <% if near_deadline_list_count >= 1 || today_deadline_list_count >= 1 || over_deadline_list_count >= 1 %>
      <p class="todo-lists__notice--text">※Todoリストを修正後、ページを再読み込みすることで通知が更新されます</p>
    <% end %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-0 col-sm-0">
        <%= render "layouts/side_menu", goals: @goals %>
        <div class="my-page__menu--icon js-todo-list-icon">
          <%= link_to my_page_path do %>
            <%= image_tag "icon/door.png", class: "my-page__menu--icon-img", alt: "menu-icon" %></br>
            <p class="my-page__link--text">マイページ</p>
          <% end %>
        </div>
      </div>
      <div class="col-lg-9 col-md-12 col-sm-12">
        <h3 class="master message upper-contents">やることをまとめるのじゃ！</h3>
        <div class="js-list-errors"></div>
        <%= render "todo_lists/header", goals: @goals, todo_list: @todo_list %>
        <div class="todo-lists__index">
          <div class="container">
            <div class="row">
              <div class="col-3">きげん</div>
              <div class="col-7">やること</div>
              <div class="col-2">
                <%= image_tag "icon/check-icon.png", class: "todo-lists__icon--check", alt: "check-icon" %>
              </div>
            </div>
            <div class="js-todo-lists">
              <%= render @todo_lists %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>