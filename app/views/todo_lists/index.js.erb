<!-- ドキュメント一覧 => Todoリスト 切り替え時-->

<!-- 背景の変更 -->
<% if Rails.env == 'production' %>
  <% back = asset_url('back/bar.jpg') %>
  $('.my-page').css({'background-image': 'url("<%= back %>")'});
<% else %>
  $('.my-page').css({'background-image': 'url("assets/back/bar.jpg")'});
<% end %>

<!--メニュー側の変更 -->
<% if Rails.env == 'production' %>
  $(".js-switch-image").prop('src',"<%= asset_url('icon/door.png') %>");
<% else %>
  $(".js-switch-image").prop('src','/assets/icon/door.png');
<% end %>
$(".js-switch-link").prop('href','/users');
$(".js-switch-text").html('きろくへもどる');

<!-- ドキュメント一覧の変更 -->
$(".js-doc-search").hide();
$(".js-todo-lists-header").show();
$(".js-message").html('やることをまとめるのじゃ！');
$(".js-card").html("<%= j(render 'todo_lists/index', goals: @goals, todo_list: @todo_list, todo_lists: @todo_lists) %>");