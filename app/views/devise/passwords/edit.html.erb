<div class="reset-psw">
  <div class="container">
    <div class="row">

      <div class="col-lg-1 col-md-1 col-sm-0"></div>

      <div class="col-lg-10 col-md-10 col-sm-12 reset-psw__form">

        <h3 class="master message upper-contents">新しいパスワードを決めるのじゃ</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, "新しいパスワード" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> もじいじょう)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "パスワードへんこう", class: "btn btn-success" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>

      <div class="col-lg-1 col-md-1 col-sm-0"></div>

    </div>
  </div>
</div>
