<div class="goal-new">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-2 col-sm-0"></div>
      <div class="col-lg-6 col-md-8 col-sm-12 goal-post-form">
        <% if @goal.errors.any? %>
  　　　　　　<div class="error_explanation">
    　　　　　　<h3><%= pluralize(@goal.errors.count, "つの") %>エラーがあります</h3>
    　　　　　　<ul class="error_message">
      　　　　　　<% @goal.errors.full_messages.each do |message| %>
      　　　　　　　　<li><%= message %></li>
      　　　　　　<% end %>
    　　　　　　</ul>
  　　　　　　</div>
　　　　<% end %>
        <h2 class="master-message upper-contents">もくひょうをきめるのじゃ！</br>
        (さいだい３つまで)</h2>
        <div class="form-group">
            <%= form_with model: @goal, local:true do |f| %>
          	  <label for="inputCategory">レベルアップしたいこと</label>
              <%= f.text_field :category, class: "form-control", placeholder: "レベルアップしたいこと" %>
              <label for="inputGoalStatus">さいしゅうもくひょう</label>
              <%= f.text_field :goal_status, class: "form-control", placeholder: "どうなっていたいか" %>
              <label for="inputMilestone">つぎのマイルストーン</label>
              <%= f.text_field :milestone, class: "form-control", placeholder: "みぢかなもくひょう" %>
              <label for="inputDeadline">マイルストーンのきげん</label>
              <%= f.date_select :deadline, class: "form-control" %>
              <%= f.submit 'せってい', class: "btn btn-primary btn-sm" %>
            <% end %>
        </div>
      </div>
      <div class="col-lg-3 col-md-2 col-sm-0"></div>
    </div>
  </div>
</div>