<div class="goal-edit">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-2 col-sm-0"></div>
      <div class="col-lg-6 col-md-8 col-sm-12 goal-post-form">
        <h3 class="master-message upper-contents">もくひょうをへんこうできるぞ</h3>
        <div class="form-group">
          <%= render "layouts/validation_errors", instance: @goal %>
            <% if @goal.present? %>
              <%= form_with model: @goal, local:true do |f| %>
          	    <label for="inputCategory">レベルアップしたいこと</label>
                <%= f.text_field :category, class: "form-control", placeholder: "レベルアップしたいこと" %>
                <label for="inputGoalStatus">さいしゅうもくひょう</label>
                <%= f.text_field :goal_status, class: "form-control", placeholder: "どうなっていたいか" %>
                <label for="inputDeadline">きげん</label>
                <%= f.date_select :deadline, class: "form-control" %>
                <%= f.submit 'へんこう', class: "btn btn-primary btn-sm" %>
              <% end %>
              <%= link_to "さくじょ", goal_path(@goal.id), method: :delete,
                  "data-confirm" => "関連する投稿も削除されます。本当によろしいですか？", class: "btn btn-danger btn-sm"  %>
            <% else %>
              <p>もくひょうがせっていされていません。</br>
              あたらしくせっていしますか？</p>
              <%= link_to "はい  ", new_goal_path %>
              <%= link_to "いいえ", user_path(current_user.id) %>
            <% end %>
        </div>
      </div>

      <div class="col-lg-3 col-md-2 col-sm-0"></div>

    </div>
  </div>
</div>