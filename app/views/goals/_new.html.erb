<div id="modal-new-goal" class="modal js-modal">
  <div class="modal__back js-modal-close"></div>
  <div class="modal__content">
　  <div class="new-goal">
      <div class="container">
        <div class="row">
          <div class="col-lg-2 col-md-0 col-sm-0"></div>
          <div class="col-lg-8 col-md-12 col-sm-12">
            <h3 class="knight message upper-contents">もくひょうをきめるのよ</h3>
            <div class="js-message-errors"></div>
            <%= form_with model: goal, remote: true do |f| %>
              <div class="form-group">
                <label for="inputCategory">レベルアップしたいこと</label>
                <%= f.text_field :category, class: "form-control", placeholder: "レベルアップしたいこと" %>
              </div>
              <div class="form-group">
                <label for="inputGoalStatus">さいしゅうもくひょう</label>
                <%= f.text_field :goal_status, class: "form-control", placeholder: "Lv.100のじょうたい" %>
              </div>
              <div class="form-group">
                <label for="inputDeadline">きげん</label>
                <%= f.date_select :deadline, class: "form-control" %>
              </div>
              <div class="form-btn">
                <%= f.submit 'せってい', class: "btn btn-primary btn-sm" %>
              </div>
            <% end %>
          </div>
          <div class="col-lg-2 col-md-0 col-sm-0"></div>
        </div>
      </div>
    </div>
    <a class="js-modal-close" href="">閉じる</a>
  </div>
</div>