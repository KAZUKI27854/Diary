<div class="col-lg-6 col-md-6 col-sm-12">
  <div class="card doc-card">
    <%= link_to  document_path(document.id) do %>
      <%= attachment_image_tag document, :diary_image, size: "300x300", class: "card-img-top "; %>
    <% end %>
    <div class="card-body">
      <div class="row">
          <p class="doc-title"><%= document.title %>のダンジョンにいどんだ！</p>
          <p class="doc-body">
            <%= document.body %> </br>
            <%= user.name %>はレベルアップした！
          </p>
          <% if current_user.id == document.user_id %>
           <span><%= link_to 'へんしゅう', edit_document_path(document.id) %> ｜ <%= link_to 'さくじょ', document_path(document.id), method: :delete %></span>
          <% end %>
          <p class="doc-date"><%= document.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    </div>
  </div>
</div>