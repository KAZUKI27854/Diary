<div class="user-edit">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-2 col-sm-0"></div>
      <div class="col-lg-6 col-md-8 col-sm-12 user-edit-form">
        <h2 class="master-message">おぬしのことをおしえて </br>
        くれんかの？</h2>

        <% if @user.errors.any? %>
          <div class="error-explanation">
            <h3><%= pluralize(@user.errors.count,"つの") %>エラーがあります</h3>
              <ul class="error-message">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>

        <%= form_with model: @user, local:true do |f| %>
          <div class="form-group mt-2">
            <label for="inputName">なまえ</label>
            <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
          </div>
          <div class="form-group">
            <label for="inputImage">プロフィールがぞう</label>
            <%= f.attachment_field :profile_image, class: "form-control-file" %>
          </div>
          <%= f.submit 'へんこう', class: "btn btn-primary btn-sm" %>
        <% end %>
        <%= link_to "もくひょうをせっていする", new_goal_path %>
      </div>

      <div class="col-lg-3 col-md-2 col-sm-0"></div>

    </div>
  </div>
</div>