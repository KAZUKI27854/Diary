<div class="my-page img-fluid">

<div class="profile">
  <div class="user-introduction">
    <h2>
      <%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg" %>
      <%= @user.name %>さんのきろく
    </h2>
    <% if @skill1.present? %>
      <h3 class="skill1-level">
        <%= @skill1 %> Lv.<%= @skill1_level %>
      </h3>
    <% end %>
    <% if @skill2.present? %>
      <h3 class="skill2-level">
        <%= @skill2 %> Lv.<%= @skill2_level %>
      </h3>
    <% end %>
    <% if @skill3.present? %>
      <h3 class="skill3-level">
        <%= @skill3 %> Lv.<%= @skill3_level %>
      </h3>
    <% end %>

  </div>
  <div class="profile-button">
    <p>
    <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn-primary btn-sm mt-3 text-light" %>
    <%= link_to "新規投稿", new_document_path, data: {"turbolinks" => false}, class: "btn btn-primary btn-sm mt-3 mr-4 text-light" %>
    </p>
  </div>
</div>

<% if @documents.exists? %>

<div class="container document-container">
  <div class="row">
    <div class="col-lg-1 col-md-0 col-sm-0">
    </div>
    <div class="col-lg-10 col-md-12 col-sm-12">
      <div class="card-deck">
        <div class="row">
          <% @documents.each do |document1,document2| %>
            <%= render 'users/card', document: document1, user: @user %>
            <% if document2 != nil %>
              <%= render 'users/card', document: document2, user: @user %>
            <% end %>
          <% end %>

        </div>
      </div>
    <!-- <パーセントイコール paginate @documents > -->
    </div>
   <div class="col-lg-1 col-md-0 col-sm-0"></div>
  </div>
</div>

<% else %>
  <div class="no-document-message">
    <h2>まだきろくはありません。とうこうしてみましょう！</h2>
  </div>
<% end %>

</div>