<div class="my-page img-fluid">
  <div class="container">
    <div class="row">

      <div class="col-lg-3 col-md-0 col-sm-0">
        <div class="profile upper-contents">
          <div class="user-info">
            <h3 class="user-name">
              <%= attachment_image_tag @user, :profile_image, size: "40x50", fallback: "brave.png" %>
              <%= @user.name %>
            </h3>
            <p class="status">Lv.<%= @user_level %></p>
            <p class="status">ぼうけん: <%= @documents.count %> 回</p>
            <p>せかいをすくった: <%= clear_times %> 回</p>
            <%= link_to "せってい", edit_user_path(current_user.id), class: "btn btn-primary btn-sm text-light " %>
            <%= link_to "きろくをのこす", new_document_path, data: {"turbolinks" => false}, class: "btn btn-primary btn-sm text-light" %>
          </div>

            <h3>スキル</h3>
            <div class="category-info">
            <% user_goals.first(4).each do |goal| %>
              <% if goal.category.present? %>
              <p class="my-goal">
                <%= link_to goal_path(goal.id) do %>
                  <%= goal.category %> Lv.<%= category_level(goal.id) %>
                <% end %>
              </p>
              <% else %>
                <p class="my-goal">なし</p>
              <% end %>
            <% end %>
            <form name="sort_form">
              <select name="sort" onchange="dropsort()">
                <option value="">スキルいちらん</option>
                <% @goals.each do |goal| %>
                <option value="/goals/<%= goal.id %>"><%= goal.category %></option>
                <% end %>
              </select>
            </form>
          </div>
        </div>
        <div class="side-menu">
          <h3>メニュー</h3>
          <ul>
            <li>todoリスト</li>
            <li>未定</li>
            <li>未定</li>
          </ul>
        </div>
      </div>
      <div class="col-lg-9 col-md-12 col-sm-12">
        <% if @documents.exists? %>
         <h2 class="master-message upper-contents">これまでのきろくじゃ</h2>
          <div class="document-container">
            <div class="card-deck">
              <div class="row">
                <% @documents_index.each do |document1,document2| %>
                  <%= render 'users/card', document: document1, user: @user %>
                  <% if document2 != nil %>
                    <%= render 'users/card', document: document2, user: @user %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <%= paginate @documents_index %>
          </div>
        <% else %>
          <h2 class="master-message upper-contents">まだきろくはないぞ。</br>
          とうこうしてみるのじゃ！</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>

