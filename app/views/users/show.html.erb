<div class="my-page img-fluid">
  <div class="container">
    <div class="row">

      <div class="col-lg-3 col-md-2 col-sm-0">
        <div class="profile">
          <div class="upper-contents">
            <h2 class="user-name">
              <%= attachment_image_tag @user, :profile_image, size: "40x50", fallback: "brave.png" %>
              <%= @user.name %>
            </h2>
            <p>これまでに ◯ 回</br>
            せかいをすくった</p>
            <h3>スキルいちらん</h3>
            <% if first_goal.category.present? %>
              <p class="skill1">
                <%= link_to goal_path(first_goal.id) do %>
                  <%= first_goal.category %> Lv.<%= first_goal_level %>
                <% end %>
              </p>
            <% else %>
              <p class="skill1">なし</p>
            <% end %>
            <% if second_goal.category.present? %>
              <p class="skill2">
                <%= link_to goal_path(second_goal.id) do %>
                  <%= second_goal.category %> Lv.<%= second_goal_level %>
                <% end %>
              </p>
            <% else %>
              <p class="skill2">なし</p>
            <% end %>
            <% if third_goal.category.present? %>
              <p class="skill3">
                <%= link_to goal_path(third_goal.id) do %>
                  <%= third_goal.category %> Lv.<%= third_goal_level %>
                <% end %>
              </p>
            <% else %>
              <p class="skill3">なし</p>
            <% end %>
            <% if @user.goals.count >= 4 %>
              <%= link_to "その他のスキル", "#" %>
            <% end %>
          </div>
          <div class="profile-button">
            <%= link_to "せってい", edit_user_path(current_user.id), class: "btn btn-primary btn-sm mt-3 text-light" %>
            <%= link_to "きろくをのこす", new_document_path, data: {"turbolinks" => false}, class: "btn btn-primary btn-sm mt-3 mr-4 text-light" %>
          </div>
        </div>
        <div class="side-menu">
          <h3>メニュー</h3>
          <ul>
            <li>todoリスト</li>
            <li>未定</li>
            <li>未定</li>
          </ul>
        </div>
      </div>
      <div class="col-lg-9 col-md-10 col-sm-12">
        <% if @documents.exists? %>
         <h2 class="master-message upper-contents">これまでのきろくじゃ</h2>
          <div class="document-container">
            <div class="card-deck">
              <div class="row">
                <% @documents.each do |document1,document2| %>
                  <%= render 'users/card', document: document1, user: @user %>
                  <% if document2 != nil %>
                    <%= render 'users/card', document: document2, user: @user %>
                  <% end %>
                <% end %>
              </div>
            </div>
            <%= paginate @documents %>
          </div>
        <% else %>
          <h2 class="master-message upper-contents">まだきろくはないぞ。</br>
          とうこうしてみるのじゃ！</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>

